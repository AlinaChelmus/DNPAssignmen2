@using BlazorAssignmentApp2.Authentication
@inject CustomAuthenticationStateProvider AuthenticationStateProvider
<h3>Security</h3>



<AuthorizeView>
    <h3>Hello
        @if (context.User.Identity != null)
        {
            @context.User.Identity.Name
        }
    </h3>
    
    <h5>Your security level is @context.User.FindFirst(claim => claim.Type.Equals("Level"))?.Value</h5>
</AuthorizeView>


<p>This piece of text is visible for level 0 and above</p>

<AuthorizeView>
    <p>This peace of text is visible for level 1 and above</p>
</AuthorizeView>
