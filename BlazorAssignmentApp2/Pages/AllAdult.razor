@page "/AllAdult"
@using BlazorAssignmentApp2.Models
@using BlazorAssignmentApp2.Data
@using System.Collections
@inject IAdultData WebService


    
    <h3>Adult</h3>
    <div class="page">
        <p>Search by First Name:
            <input class="filter" type ="text" @oninput="@((arg ) => FilterByName_(arg))" />
        </p>
        <p>
            <button type="button" @onclick="ExecuteFilter">Filter</button>
            </p>
        @if (adultsToShow == null)
        {
            <p>
                <em>Loading..</em>
            </p>
        }
        else if (!adultsToShow.Any())
        {
            <p>
                <em>No Adult List. Please add some.</em>
            </p>
        }
        else
        {
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>HairColor</th>
                    <th>EyeColor</th>
                    <th>Age</th>
                    <th>Weight</th>
                    <th>Height</th>
                    <th>Sex</th>
                    <th>JobTitle</th>
                    <th>Salary</th>
                    <th>Remove</th>
                </tr>
                </thead>
                <tbody>
                @foreach (Adult item in adultsToShow)
                {
                    <tr>

                        <td>@item.Id</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.HairColor</td>
                        <td>@item.EyeColor</td>
                        <td>@item.Age</td>
                        <td>@item.Weight</td>
                        <td>@item.Height</td>
                        <td>@item.Sex</td>
                        <td>@item.JobTitle.JobTitle</td>
                        <td>@item.JobTitle.Salary</td>
                        <td>
                            <button @onclick="@(() => ExecuteFilter())">
                                <i class="oi oi-trash" style="color:red"/>
                            </button> </td>
                    </tr>
                }
                </tbody>
            </table>
        }

    </div>
   





@code {
    private IList<Adult> adults;
    private IList<Adult> adultsToShow;
    
    
    string? FilterByName = null;
    private void FilterByName_(ChangeEventArgs changeEventArgs)
    
    {
        
        try
        {
            FilterByName = changeEventArgs.Value.ToString();
        }
        catch (Exception e)
        {}

    }
    
    private async Task ExecuteFilter()
    {
        adultsToShow = await WebService.GetAdults(null);

    }

}